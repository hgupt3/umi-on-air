<mujoco model="ur10e_umi">
    <option integrator="implicit" timestep="0.02" gravity="0 0 0"/>
    <!-- Point to UR menagerie assets while parsing the included arm -->
    <compiler meshdir="/home/harsh/flyingumi/am_mujoco_ws/mujoco_menagerie/universal_robots_ur10e/assets" angle="radian" autolimits="true"/>

    <asset>
        <texture name="grid" type="2d" builtin="checker"
                 rgb1=".1 .2 .3" rgb2=".2 .3 .4"
                 width="512" height="512" mark="edge" markrgb=".2 .3 .4"/>
        <material name="grid" texture="grid" texrepeat="1 1" texuniform="true"/>
    </asset>

    <!-- Include UR10e arm with peg from menagerie (meshes resolved via absolute meshdir above) -->
    <include file="../../mujoco_menagerie/universal_robots_ur10e/ur10e.xml"/>
    <!-- Restore local meshdir (no longer need gripper meshes here, they're inside UR file) -->
    <compiler meshdir="./meshes" angle="radian" autolimits="true"/>

    <worldbody>
        <!-- Flat ground for reference (optional) -->
        <geom name="ground" type="plane" pos="0 0 -0.5" size="10 10 .1" material="grid"/>

        <!-- (Gripper is now defined inside the UR10e model under wrist_3_link) -->
    </worldbody>

    

    <!-- Finger servos as in UMI -->
    <actuator>
        <position name="lfinger_servo" joint="lfinger_slide" ctrlrange="0 0.06" kp="35" kv="0.5"/>
        <position name="rfinger_servo" joint="rfinger_slide" ctrlrange="0 0.06" kp="35" kv="0.5"/>
    </actuator>
</mujoco>


