<mujoco model="hexa_scorpion_object_4dof">
    <option
            timestep="0.02"
            gravity="0 0 0"
            noslip_iterations="5"
            impratio="2.0" >
    </option>

    <visual>
        <quality shadowsize="0" />
    </visual>
    <default>
        <geom friction="1.0 0.5 0.1" solimp="0.9 0.95 0.001" solref="0.02 1" condim="3"/>
    </default>

    <compiler angle="radian" meshdir="./meshes" autolimits="true"/>
    <asset>
        <material name="wooden_cover"  texuniform="false"  texture="wooden_cover"/>
        <texture type="2d" name="wooden_cover" file="./textures/kitchen-wood.png"/>
        
        <material name="dark_wooden_cover"  texuniform="false"  texture="dark_wooden_cover"/>
        <texture type="2d" name="dark_wooden_cover" file="./textures/dark-wood.png"/>
        
        <material name="plywood_cover"  texuniform="false"  texture="plywood_cover"/>
        <texture type="2d" name="plywood_cover" file="./textures/plywood-4k.png"/>

        <!-- object-bottle -->
        <mesh file="./bottle.stl" name="bottle_mesh" scale="0.8 0.8 0.8"/>
        <mesh file="./bowl.stl" name="bowl_mesh" scale="0.7 0.7 0.7"/>
        <!-- object-can -->
        <mesh file="./can.stl" name="can_mesh" scale="0.8 0.8 0.8"/>
        <texture file="./textures/soda.png" name="tex-can" type="2d"/>
        <material name="coke" reflectance="0.7" texrepeat="5 5" texture="tex-can" texuniform="true"/>
        <!-- object red can-->
        <texture file="./textures/red-wood.png" name="tex-red-can" type="2d"/>
        <material name="red-coke" reflectance="0.7" texrepeat="5 5" texture="tex-red-can" texuniform="true"/>
        <!-- soda can-->
        <texture file="./textures/soda.png" name="soda-can" type="2d"/>
        <material name="soda" reflectance="0.7" texrepeat="5 5" texture="tex-red-can" texuniform="true"/>
    </asset>

    <include file="ur10e_umi.xml"/>

    <worldbody>
        <light diffuse=".01 .01 .01" pos="0 0 0.01" dir="0 0 -1"/>
        <body name="table" pos="0.4 0.2 0.40">
            <geom name="table_top" type="box" pos="1.0 0 0.4" size="0.5 1 0.05"  material="wooden_cover"/>
            <geom name="table_leg_1" type="box" pos="1.4 0.85 -0.05" size="0.05 0.05 0.4"  material="dark_wooden_cover"/>
            <geom name="table_leg_2" type="box" pos="1.4 -0.85 -0.05" size="0.05 0.05 0.4"  material="dark_wooden_cover"/>
            <geom name="table_leg_3" type="box" pos="0.6 0.85 -0.05" size="0.05 0.05 0.4"  material="dark_wooden_cover"/>
            <geom name="table_leg_4" type="box" pos="0.6 -0.85 -0.05" size="0.05 0.05 0.4"  material="dark_wooden_cover"/>
        </body>
        <!-- <body name="cube" pos="0.7 0 1" euler='-0 0 -0'>
            <freejoint name="cube"/>
            <inertial pos="0 0 0" mass="0.3" diaginertia="0.001 0.001 0.001"/>
            <geom name="cube" type="box" size=".02 .02 .02" rgba="0.67 0.73 0.78 1" />
            <geom name="cube_collision" type="box" size=".02 .02 .02" />
        </body>
        <body name="bottle" pos="0.8 0.1 1">
            <inertial pos="0.0 0 0" mass="0.25" diaginertia="0.005 0.005 0.005" />
            <freejoint name="bottle"/>
            <geom name='bottle' mesh="bottle_mesh" type="mesh" 
                  solimp="0.998 0.998 0.001" solref="0.001 1" 
                  density="50" friction="0.95 0.3 0.1" 
                  group="0" condim="4" material="coke"/>
        </body> -->
        <body name="can" pos="1.4 0.45 0.92">
            <inertial pos="0.0 0 0" mass="0.01" diaginertia="0.01 0.01 0.01" />
            <joint name="can" type="free" damping="0.01" armature="0.0005"/>
            <geom name='can' mesh="can_mesh" type="mesh"
                   density="10" friction="1 0.5 0.1" 
                   group="0" material="coke"/>
            <geom name='can_collision' mesh="can_mesh" type="mesh" material="coke" friction="1 0.5 0.1"/>
        </body>
        <body name="bowl" pos="1.4 -0.05 0.92">
            <inertial pos="0.0 0 0" mass="50.0" diaginertia="0.01 0.01 0.01" />
            <joint name="bowl" type="free" damping="0.01" armature="0.0005"/>
            <geom name='bowl' mesh="bowl_mesh" type="mesh" 
                  density="50" friction="0.95 0.3 0.1" 
                  group="0" material="plywood_cover"/>
        </body>
    </worldbody>
</mujoco>